@model SearchIndexModel

@{
    var relatedContent = Model.SearchIndexType.SearchIndexPage.RelatedContent;
}

@if (relatedContent != null && relatedContent.Items.Any())
{
    <aside class="app-related-items" role="complementary" style="border-top: 2px solid #1d70b8; padding-top: 10px;">
        <h2 class="govuk-heading-s" id="subsection-title">
            @relatedContent.Title
        </h2>
        <nav role="navigation" aria-labelledby="subsection-title">
            <ul class="govuk-list govuk-!-font-size-16">
                @foreach (var item in relatedContent.Items)
                {
                    <li>
                        <a class="govuk-link--no-visited-state" href="@item.Url">
                            @item.Title
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </aside>   
}


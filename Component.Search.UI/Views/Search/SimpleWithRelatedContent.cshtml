@model SearchIndexModel

@{
    var searchPageType = Model.SearchIndexType.SearchIndexPage;
    ViewData["Title"] = searchPageType.Title;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">@searchPageType.Title</h1>
    </div>
    <div class="govuk-grid-column-one-third">
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @await Html.PartialAsync("SearchComponents/_SearchInput", Model)
    </div>
    <div class="govuk-grid-column-one-third">
        @await Html.PartialAsync("SearchComponents/_RelatedContent", Model)
    </div>
</div>
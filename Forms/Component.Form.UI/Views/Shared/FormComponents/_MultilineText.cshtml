@model Component.Form.Model.Component

@{
    var labelClass = Model.LabelIsPageTitle ? "govuk-label govuk-label--l" : "govuk-label govuk-label--m";
}

<govuk-textarea name="@Model.Name">
    <govuk-textarea-label id="@Model.Name-label" class="@labelClass" is-page-heading="@Model.LabelIsPageTitle">
        @Model.Label
    </govuk-textarea-label>
    @if (Model.Hint != null)
    {
        <govuk-textarea-hint>
            @Model.Hint
        </govuk-textarea-hint>
    }
    @if (ViewBag.Errors != null && ViewBag.Errors.ContainsKey(Model.Name))
    {
        <govuk-textarea-error-message>
            @String.Join("<br>", ViewBag.Errors[Model.Name])
        </govuk-textarea-error-message>
    }
</govuk-textarea>

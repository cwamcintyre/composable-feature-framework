@model IEnumerable<Component.Form.Model.Option>

<govuk-breadcrumbs collapse-on-mobile="true">
    <govuk-breadcrumbs-item asp-controller="Home" asp-action="Index">Home</govuk-breadcrumbs-item>
    <govuk-breadcrumbs-item href="/form/@ViewBag.FormId/edit">Form @ViewBag.FormId</govuk-breadcrumbs-item>
    <govuk-breadcrumbs-item href="/form/@ViewBag.FormId/editPage/@ViewBag.PageId">Page @ViewBag.PageId</govuk-breadcrumbs-item>
    <govuk-breadcrumbs-item href="/component/@ViewBag.FormId/@ViewBag.PageId/edit/@ViewBag.ComponentName">Component @ViewBag.ComponentName</govuk-breadcrumbs-item>
    <govuk-breadcrumbs-item>Options</govuk-breadcrumbs-item>
</govuk-breadcrumbs>

<h2 class="govuk-heading-l">Options</h2>

@if (Model == null || Model.Count() == 0)
{
    <p class="govuk-body">No options have been added to this component.</p>
}
else 
{
    <table class="govuk-table" id="options-table">
        <thead class="govuk-table__head">
            <tr class="govuk-table__row">
                <th class="govuk-table__header">Key</th>
                <th class="govuk-table__header">Value</th>
                <th class="govuk-table__header">Actions</th>
            </tr>
        </thead>
        <tbody class="govuk-table__body">
            @foreach (var option in Model)
            {
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell" id="@option.Key-key">@option.Key</td>
                    <td class="govuk-table__cell" id="@option.Value-value">@option.Value</td>
                    <td class="govuk-table__cell">
                        <a href="/Option/Edit/@option.Key" class="govuk-link">Edit</a> |
                        <a href="/Option/Delete/@option.Key" class="govuk-link">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="/Option/Add" class="govuk-button" id="add-new-option">Add New Option</a>
@model Component.Form.Model.Component

<govuk-input name="@Model.Name" value="@Model.Answer">
    @if (@Model.LabelIsPageTitle)
    {
        <govuk-input-label id="@Model.Name-label" is-page-heading="true" class="govuk-label--l">
            @Model.Label
        </govuk-input-label>
    }
    else
    {
        <govuk-input-label id="@Model.Name-label" class="govuk-label--m">
            @Model.Label
        </govuk-input-label>
    }
    @if (Model.Hint != null)
    {
        <govuk-input-hint>
            @Model.Hint
        </govuk-input-hint>
    }
    @if (ViewBag.Errors != null && ViewBag.Errors.ContainsKey(Model.Name))
    {
        <govuk-input-error-message>
            @Html.Raw(String.Join("<br>", ViewBag.Errors[Model.Name]))
        </govuk-input-error-message>
    }
</govuk-input>
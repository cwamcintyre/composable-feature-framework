@model Component.Form.Model.Component

<govuk-input name="@Model.Name" input-class="govuk-input--width-10" value="@Model.Answer">
    @if (@Model.LabelIsPageTitle)
    {
        <govuk-input-label is-page-heading="true" class="govuk-label--l">
            @Model.Label
        </govuk-input-label>
    }
    else
    {
        <govuk-input-label class="govuk-label--m">
            @Model.Label
        </govuk-input-label>
    }
    @if (Model.Hint != null)
    {
        <govuk-input-hint>
            @Model.Hint
        </govuk-input-hint>
    }
    @if (ViewBag.Errors != null && ViewBag.Errors.ContainsKey(Model.Name))
    {
        <govuk-input-error-message>
            @ViewBag.Errors[Model.Name]
        </govuk-input-error-message>
    }
</govuk-input>

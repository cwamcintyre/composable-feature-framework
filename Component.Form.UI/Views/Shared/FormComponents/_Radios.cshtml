@model Component.Form.Model.Component

@{
    var labelClass = Model.LabelIsPageTitle ? "govuk-label govuk-label--l" : "govuk-label govuk-label--m";
}

<govuk-radios name="@Model.Name">
    <govuk-radios-fieldset>
        <govuk-radios-fieldset-legend class="@labelClass" is-page-heading="@Model.LabelIsPageTitle">
            @Model.Label
        </govuk-radios-fieldset-legend>
        @if (Model.Hint != null)
        {
            <govuk-radios-hint>
                @Model.Hint
            </govuk-radios-hint>
        }
        @if (ViewBag.Errors != null && ViewBag.Errors.ContainsKey(Model.Name))
        {
            <govuk-radios-error-message>
                @Html.Raw(String.Join("<br>", ViewBag.Errors[Model.Name]))
            </govuk-radios-error-message>
        }
        @foreach (var option in Model.Options)
        {
            <govuk-radios-item value="@option.Key">@option.Value</govuk-radios-item>
        }
    </govuk-radios-fieldset>
</govuk-radios>


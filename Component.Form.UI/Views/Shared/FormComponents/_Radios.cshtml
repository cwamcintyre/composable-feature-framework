@model Component.Form.Model.Component

<govuk-radios name="@Model.Name">
    <govuk-radios-fieldset>
        <govuk-radios-fieldset-legend is-page-heading="true">
            @Model.Label
        </govuk-radios-fieldset-legend>
        @foreach (var option in Model.Options)
        {
            <govuk-radios-item value="@option.Key">@option.Value</govuk-radios-item>
        }
        @if (Model.Hint != null)
        {
            <govuk-radios-hint>
                @Model.Hint
            </govuk-radios-hint>
        }
        @if (ViewBag.Errors != null && ViewBag.Errors.ContainsKey(Model.Name))
        {
            <govuk-radios-error-message>
                @ViewBag.Errors[Model.Name]
            </govuk-radios-error-message>
        }
    </govuk-radios-fieldset>
</govuk-radios>

